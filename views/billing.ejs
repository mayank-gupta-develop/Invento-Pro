            <div class="user-menu-dropdown" id="user-menu-dropdown">
              <div class="user-menu-section">
                <% if (user.email) { %>
                <div class="user-menu-row">
                  <span class="user-menu-icon">ðŸ“§</span>
                  <span class="user-menu-text"><%= user.email %></span>
                </div>
                <% } %>
                <% if (user.phone) { %>
                <div class="user-menu-row">
                  <span class="user-menu-icon">ðŸ“±</span>
