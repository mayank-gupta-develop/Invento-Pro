<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= bill.invoice_no %></title>

  <style>
    /* ===== PAGE SETUP ===== */
    @page {
      size: A4 portrait;
      margin: 12mm;
    }

    body {
      font-family: Arial, sans-serif;
      font-size: 11px;
      color: #000;
      margin: 0;
      padding: 0;
    }

    /* ===== HEADER ===== */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 14px;
    }

    .brand {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .brand img {
      height: 44px;
    }

    h2 {
      text-align: center;
      font-size: 14px;
      margin: 12px 0;
      letter-spacing: 1px;
    }

    /* ===== CUSTOMER INFO ===== */
    .info {
      margin-bottom: 10px;
      line-height: 1.4;
    }

    /* ===== TABLE ===== */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    th, td {
      border: 1px solid #000;
      padding: 4px;
      font-size: 11px;
    }

    th {
      background: #f2f2f2;
    }

    .right {
      text-align: right;
    }

    /* ===== TOTALS ===== */
    .totals {
      width: 45%;
      float: right;
      margin-top: 12px;
    }

    .totals td {
      padding: 5px;
    }

    /* ===== FOOTER ===== */
    .footer {
      clear: both;
      margin-top: 20px;
      text-align: center;
      font-size: 10px;
    }
  </style>
</head>

<body>

  <!-- ===== HEADER ===== -->
  <div class="header">
    <div class="brand">
      <img src="/images/logo.png" alt="Invento Pro">
      <div>
        <strong>Invento Pro</strong><br>
        <small>Smart Billing & Inventory</small>
      </div>
    </div>

    <div class="right">
  <strong>Billed By:</strong> <%= username %><br>
  <strong>Invoice:</strong> <%= bill.invoice_no %><br>
  <strong>Date:</strong>
  <%= new Date(bill.created_at).toLocaleDateString("en-IN", {
    timeZone: "Asia/Kolkata"
  }) %>
</div>
  </div>

  <h2>GST TAX INVOICE</h2>

  <!-- ===== CUSTOMER INFO ===== -->
  <div class="info" >
    <strong>Customer Name:</strong> <%= bill.customer_name %><br>

    <% if (bill.customer_phone) { %>
      <strong>Phone:</strong> <%= bill.customer_phone %><br>
    <% } %>

    <% if (bill.customer_gst) { %>
      <strong>GSTIN:</strong> <%= bill.customer_gst %><br>
    <% } %>

    <% if (bill.customer_address) { %>
      <strong>Address:</strong> <%= bill.customer_address %><br>
    <% } %>
  </div>

  <!-- ===== ITEMS ===== -->
  <table>
    <thead>
      <tr>
        <th>S. NO.</th>
        <th>Item</th>
        <th>Qty</th>
        <th>MRP</th>
        <th>Disc</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
      <% items.forEach((i, idx) => {
        const base = i.mrp * i.qty;
        const disc = base * ((i.discount || 0) / 100);
      %>
        <tr>
          <td><%= idx + 1 %></td>
          <td><%= i.name %></td>
          <td class="right"><%= i.qty %></td>
          <td class="right">₹<%= i.mrp.toFixed(2) %></td>
          <td class="right"><%= i.discount || 0 %>%</td>
          <td class="right">₹<%= (base - disc).toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- ===== TOTAL ===== -->
  <table class="totals">
  <tr>
    <td class="right">Subtotal</td>
    <td class="right">₹<%= totals.subtotal.toFixed(2) %></td>
  </tr>

  <% if (totals.discountTotal > 0) { %>
  <tr>
    <td class="right">Discount</td>
    <td class="right">− ₹<%= totals.discountTotal.toFixed(2) %></td>
  </tr>
  <% } %>

  <tr>
    <td class="right">CGST</td>
    <td class="right">₹<%= totals.cgst.toFixed(2) %></td>
  </tr>

  <tr>
    <td class="right">SGST</td>
    <td class="right">₹<%= totals.sgst.toFixed(2) %></td>
  </tr>

  <tr>
    <td class="right"><strong>Grand Total</strong></td>
    <td class="right"><strong>₹<%= totals.subtotal.toFixed(2) %></strong></td>
  </tr>
</table>

  <div class="footer">
    Thank you for your business
  </div>

  <script>
    window.onload = function () {
      window.print();
    };
    window.onafterprint = function () {
      window.close();
    };
  </script>

</body>
</html>