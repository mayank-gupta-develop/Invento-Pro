<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= appName %> â€” Bills</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/components.css" />
  <link rel="stylesheet" href="/css/bills.css" />
</head>

<body>
<div class="app">

<!-- ================= HEADER ================= -->
<header class="app-header-bar">
  <div class="app-brand">
    <span class="app-title"><%= appName %></span>
    <div class="bills-header" >
  <h2>Bills History</h2>
</div>
  </div>

  <nav class="main-nav">
    <a class="nav-link" href="/inventory">Inventory</a>
    <a class="nav-link" href="/catalog">Catalog</a>
    <a class="nav-link" href="/billing">Billing</a>
    <a class="nav-link active" href="/bills">Bills</a>
    <a class="nav-link" href="/sales">Sales</a>
  </nav>

  <div class="app-header-right">
    <form method="POST" action="/logout">
      <button type="submit" class="user-menu-btn">
        <span class="user-avatar">
          <%= (currentUser?.username || 'U').charAt(0).toUpperCase() %>
        </span>
        <span><%= currentUser?.username || 'User' %></span>
      </button>
    </form>
    <div class="header-actions">
    <button id="theme-toggle">Dark Theme ðŸŒ™</button>
  </div>
  </div>
</header>

<!-- ================= MAIN ================= -->
<main class="app-main">
<section class="panel">

  <!-- Panel Header -->
  <div class="bills-header" id="search" text-align="center">
    <h2>Bills History</h2>
    <input
      
      type="text"
      placeholder="Search Bills"
    />
  </div>

  <!-- Bills Table -->
  <div class="table-wrapper">
    <table id="bills-table">
      <thead>
  <tr>
    <th>#</th>
    <th>Invoice</th>
    <th>Customer</th>
    <th>Date</th>
    <th>Subtotal</th>
    <th>GST</th>
    <th>Total</th>
    <th>Actions</th>
  </tr>
</thead>

      <tbody>
        <% if (bills && bills.length) { %>
          <% bills.forEach((b, i) => { %>
          <tr
  data-invoice="<%= b.invoice_no %>"
  data-customer="<%= (b.customer_name || '').toLowerCase() %>"
>
  <td><%= i + 1 %></td>
  <td><%= b.invoice_no %></td>
  <td><%= b.customer_name || "-" %></td>
  <td><%= new Date(b.created_at).toLocaleString() %></td>
  <td>â‚¹<%= b.subtotal.toFixed(2) %></td>
  <td class="muted">Included</td>
  <td>â‚¹<%= b.total.toFixed(2) %></td>
  <td class="actions">
    <button onclick="printBill('<%= b.id %>')">Print</button>
    <button onclick="editBill('<%= b.id %>')">Edit</button>
    <button class="danger" onclick="deleteBill('<%= b.id %>')">Delete</button>
  </td>
</tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7" class="muted">No bills found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

</section>
</main>

</div>

<script src="/js/bills.js"></script>
<script src="/js/theme.js"></script>
</body>
</html>