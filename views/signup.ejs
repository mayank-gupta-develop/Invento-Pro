<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= appName %> â€” Sign Up</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Styles -->
  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/components.css" />
  <link rel="stylesheet" href="/css/login-signup.css" />
</head>

<body>
  <div class="auth-wrapper">
    <div class="auth-card">

      <!-- Logo -->
      <div class="auth-logo-container">
        <img src="/images/logo.png" alt="Invento Pro" class="auth-logo" />
        <h1 class="auth-logo-text"><%= appName %></h1>
        <p class="auth-subtitle">Create your account</p>
      </div>
      <button id="theme-toggle" class="icon-btn auth-theme">ðŸŒ“</button>

      <!-- Errors -->
      <% if (errors?.general) { %>
        <div class="alert error"><%= errors.general %></div>
      <% } %>

      <!-- Form -->
      <form method="POST" action="/signup" autocomplete="off">
        <div class="form-group">
          <label>Username</label>
          <input name="username" placeholder="Choose a username" required />
        </div>

        <div class="form-group">
          <label>Email </label>
          <input name="email" type="email" placeholder="Enter email" />
        </div>

        <div class="form-group">
          <label>Phone </label>
          <input name="phone" placeholder="Enter phone number" />
        </div>

        <div class="form-group">
          <label>Password</label>
          <div class="password-wrapper">
            <input
              id="password"
              name="password"
              type="password"
              placeholder="Create password"
              required
            />
            <button
              type="button"
              class="password-toggle"
              onclick="togglePassword()"
            >
              Show
            </button>
          </div>
        </div>
        <p class="muted small">
  Minimum 10 characters, must include Atleast one letter and nine numbers or nine letters and one number
</p>

        <button type="submit">Create Account</button>
      </form>

      <!-- Footer -->
      <div class="auth-footer">
        Already have an account?
        <a href="/login">Login</a>
      </div>
    </div>
  </div>

  <script>
    function togglePassword() {
      const input = document.getElementById("password");
      input.type = input.type === "password" ? "text" : "password";
    }
  </script>
  <script src="/js/theme.js"></script>
</body>
</html>